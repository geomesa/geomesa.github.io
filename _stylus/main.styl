@import 'bootstrap.css'
@import 'solarized-dark.css'
@import 'nib'

// UI Elements
mastheadLogoHeight  = 116px
mastheadNavHeight   = 50px
toolbarHeight       = 30px
pagePadding         = 50px

// Images
// 280x114
geomesaLogoUrl      = '../img/geomesa.png'
geomesaLogoUrl-2x      = '../img/geomesa-2x.png'
geomesaLogoWidth    = 280px
geomesaLogoHeight   = 114px
textureBgUrl        = '../img/texture-bg.png'
// 200x38
locationtechLogoW   = 200px
locationtechLogoH   = 38px
locationtechUrl     = '../img/locationtech.png'
locationtechUrl-2x  = '../img/locationtech-2x.png'

// Colors
textDark            = #9E9B93
textLight           = #bbb
brandOrange         = #E6810A
brandRedLight       = #C52A0F
brandRedDark        = #821C09
bodyBgColor         = #fff
mastheadBorderColor = #bbb
footerBgColor       = #

body
    background bodyBgColor
    color textDark
    font-size 15px
    line-height 1.7
    a
        color brandOrange
        &:hover
            color brandRedLight
            text-decoration none
    code
        font-weight bold
        background #CCC

    .well
        background #232323
        margin 20px 0
        border #333
        color #DDD
        strong
            color #f5f5f5


h2, h3
    color wheat

h4
    color #F5F5F5
    font-weight bold
    margin-top 30px

// masthead
.logo
    padding-top 20px
    text-align center
    margin 0
    background #222222
    a
        text-indent -9999px
        display block
        margin 0 auto
        width geomesaLogoWidth
        height geomesaLogoHeight
        background url(geomesaLogoUrl) center no-repeat
        background-size contain

.tagline
    margin-bottom 0
    border 0
    border-radius 0
    background #222222
    text-align center
    h2
        margin 0
        padding 10px 0 15px 0
        font-size 18px
        color textDark


.page-content
    position relative // For .sidebar-col absolute positioning...
    padding-top pagePadding + toolbarHeight
    padding-bottom pagePadding
    h2
        border-top 1px solid #565656
        margin-top 30px
        padding-top 30px
        &:first-of-type
            border none
            margin-top 20px

.sidebar
    padding 10px
    background #222
    border-radius 4px
    box-shadow 0 8px 6px -6px black
    // responsive
    margin-right -15px
    margin-left -15px
    .toolbar
        height toolbarHeight
        #toggle
            cursor pointer
            float right
            height toolbarHeight
            width 30px
            // background cyan
            .icon-bar
                display block
                margin-top 6px
                height 4px
                background textDark
    .content
        &.collapsed
            display none
    // end responisve
    h3
        font-size 20px
        border-bottom 1px solid #444
        padding-bottom 5px
        margin-bottom 5px
        margin-top 30px
        &:first-of-type
            margin-top 10px


// Smaller screens
.sidebar-col
    position absolute
    top 0
    right 0
    left 0


// Bigger than tablets
@media screen and (min-width: 992px)
    .page-content
        padding-top pagePadding

    .sidebar-col
        position static

    .sidebar
        margin-right 0
        margin-left 0
        .toolbar
            display none
        &.stuck
            // For jquery waypoints
            position fixed
            top 20px
        .content
            &.collapsed
                // Dont care about hiding this on larger screens...
                display block


footer
    clearfix()
    background footerBgColor
    padding 20px
    .locationtech
        float left
        width locationtechLogoW + 20px
        height locationtechLogoH + 10px
        border-radius 5px
        background #F5F5F5 url(locationtechUrl) 10px no-repeat
        background-size locationtechLogoW auto
        h3
            text-indent 9999px
            overflow hidden

.jumbotron
    background none
    .container &
        border-radius 0
    .main-image
        background green url(../img/map-365x300.png) no-repeat
        width 100%
        height 300px
    h2
        font-family 'Roboto', sans-serif
        color #BBB


.tutorial
    h3
        color #F5F5F5
        font-size 22px
        padding-top 40px
        margin-top 40px
        border-top 1px solid #565656
        &:first-of-type
            border none
            padding-top 20px
    h4
        color #F5F5F5
        font-weight bold
        font-size 16px
        border-radius 5px
        margin 20px 0
    header
        h4
            color #BBB
            font-size 16px
            margin-top 10px
            small
                color #565656
    img
        margin 40px 0
        display block
        max-width 100%
        height auto

.callout
    margin 20px 0
    padding 20px
    border-left 5px solid black
    border-radius 5px

.callout-warning
    color white
    background #565656
    border-color brandRedLight

// Override some pygments stuff
.highlight
    border-radius 5px
    margin 20px 0
    code
        background none
        font-weight normal
    pre
        background-color #002B36
        border none
.highlight .bash
    // color wheat
    color #93a1a1

@media all and (-webkit-min-device-pixel-ratio: 1.3), (min-resolution: 124.8dpxx)
    .logo a
        background-image url(geomesaLogoUrl-2x)
    footer
        .locationtech
            background-image url(locationtechUrl-2x)


// IE 8
.lt-ie9
    body
        min-width 900px
    .row:after
        clear none
    .page-content
        width 900px
        .col-md-9
            width 650px
        .sidebar-col
            width 250px

    .sidebar-col
        position absolute
        margin-left 650px
        margin-top pagePadding + toolbarHeight

    .sidebar
        margin-right 0
        margin-left 0
        .toolbar
            display none
        &.stuck
            // For jquery waypoints
            position fixed
            top 20px
        .content
            &.collapsed
                // Dont care about hiding this on larger screens...
                display block
